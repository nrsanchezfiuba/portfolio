<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;

    }

    .container{
        width: 1280px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;

    }
    .main-head{
        width: 100%;
        height: 54px;
        position: absolute;
        top: 0;
        left: 0;
        background: transparent;
        z-index: 9999;
    }

    .main-head.slidedown{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgb(55, 55, 55);
        animation: slidedown .4s forwards;
    }

    @keyframes slidedown {
        from{
            top: -250px;
        }
        to{
            top: 0;
            box-shadow: 0 2px 8px 0 rgba(0,0,0,.2);
        }
    }

    .main-head .main-menu{
        width: 100%;
        height: 54px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .main-head .main-menu .logo{
        font-size: 25px;
        font-weight: 700;
        color: #fff;
    }

    .main-head .main-menu .nav-menu{
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .main-head .main-menu .nav-menu .nav-list{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item {
        list-style: none;
        padding: 15px 30px;
    }



    .main-head.slidedown .main-menu .nav-menu .nav-list .nav-list-item .nav-link {
        color: #000;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link:hover{
        color: #B53471;
    }
    .showcase {
        width: 100%;
        height: 56px;
        background: url("https://i.ibb.co/zhzPj7b/banner.webp");
        background-position: center;
        background-size: cover;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .showcase .overlay {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: rgba(0,0,0, .5);
    }

    .showcase .content{
        padding: 0 230px 0 230px;
        color: #fff;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link {
        color: #ffffff;
        font-size: 18px;
        font-weight: bold;
        text-decoration: none;
        padding: 10px 10px;
        margin: 0 5px;
        position: relative;
        display: inline-block;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link::before,
    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link::after {
        content: "";
        position: absolute;
        display: block;
        border: 0px solid transparent;
        width: 0%;
        height: 0%;
        transition: all 0.5s ease;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link::after {
        top: 0;
        left: 0;
        border-top: 2px solid transparent;
        border-left: 2px solid transparent;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link::before {
        right: 0;
        bottom: 0;
        border-bottom: 2px solid transparent;
        border-right: 2px solid transparent;
    }

    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link:hover::before,
    .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link:hover::after {
        width: 100%;
        height: 100%;
        border-color: #fff;
    }


    /*for mobile responsiveness*/
    @media screen and (max-width: 768px) {
        .container {
            width: 100%;
            padding-bottom: 0;
            justify-content: space-between ;
            align-items: center;
        }
        .main-head {
            padding: 0;
            height: auto;
        }
        .main-head .main-menu .logo {
            display: none;
        }
        .main-head .main-menu .nav-menu .nav-list {
            flex-direction: row;
            padding-bottom: 0;
        }
        .main-head .main-menu .nav-menu.active .nav-list {
            display: flex;
        }
        .main-head .main-menu .nav-menu .nav-list .nav-list-item {
            padding: 2px 2px;
        }
        .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link {
            transition: color 0.5s ease;
            pointer-events: all;
            font-size: 14px;
            align-items: center;
        }
        .menu-button{
            display: none;
            font-size: 12px;
        }
        .main-head .main-menu .nav-menu .nav-list .nav-list-item .nav-link.hover-active {
            color: #B53471;
            animation: hoverEffectMobile 0.8s forwards;
        }

        @keyframes hoverEffectMobile {
            0% {
                color: #fff;
            }
            100% {
                color: #B53471;
            }
        }
    }

</style>

<script>
    const mainHead = document.querySelector('.main-head') as HTMLElement | null;
    const logo = document.querySelector('.logo') as HTMLElement | null;

    window.addEventListener('scroll', function () {
        if (mainHead && logo) {
            if (window.scrollY > 100) {
                mainHead.classList.add('slidedown');
                logo.style.color = '#000';
            } else {
                mainHead.classList.remove('slidedown');
                logo.style.color = '';
            }
        }
    });
</script>

<script>
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('touchstart', () => {
            link.classList.add('hover-active');
            setTimeout(() => {
                link.classList.remove('hover-active');
            }, 800);
        });
    });
</script>
